doctype html
html(lang='ja')
  head
    meta(name='viewport',content='target-densitydpi=device-dpi,width=device-width,initial-scale=1.0,user-scalable=yes')
    title= title
    block css
        link(rel='stylesheet',href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet',href='/stylesheets/bootstrap-theme.min.css')
        link(rel='stylesheet',href='/stylesheets/jquery.sidr.dark.css')
        link(rel='stylesheet',href='/stylesheets/style.css')
        link(rel='stylesheet',href='/stylesheets/login.css')
    block script
        script(src='/javascripts/jquery-1.10.2.min.js',type='text/javascript')
        script(src='/javascripts/jquery-ui-1.10.3.custom.min.js')
        script(src='/javascripts/bootstrap.min.js',type='text/javascript')
        script(src='/javascripts/jquery.sidr.min.js',type='text/javascript')
  body
    .bs
        form.form-horizontal(role='form',method='post',action='/login')
            .form-group
                label.col-sm-2.control-label UserName
                .col-sm-10
                    input.form-control.input-lg(type='text',name='name',placeholder='name')
            .form-group
                label.col-sm-2.control-label PassWord
                .col-sm-10
                    input.form-control.input-lg(type='text',name='password',placeholder='password')
            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-primary.btn-lg(type='submit') Login